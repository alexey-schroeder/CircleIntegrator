<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import sample.CanvasWithZoom?>
<HBox spacing="20" fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" prefWidth="700" prefHeight="700">
    <children>
        <CanvasWithZoom fx:id="canvasWithZoom"/>
        <VBox spacing="10">
            <children>
                <Button fx:id="fileChooser" onAction="#onFileChooserButtonClick" text="Browse.."/>
                <VBox spacing="10">
                    <children>
                        <Label text="Center Coordinate"/>
                        <HBox spacing="10">
                            <children>
                                <Label text="X:"/>
                                <Label fx:id="xCenterCoordinateLabel"/>
                            </children>
                        </HBox>
                        <HBox spacing="10">
                            <children>
                                <Label text="Y:"/>
                                <Label fx:id="yCenterCoordinateLabel"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
</HBox>